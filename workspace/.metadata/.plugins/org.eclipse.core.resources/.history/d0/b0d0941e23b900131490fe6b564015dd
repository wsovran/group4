import android.app.Application;


public class Globals extends Application {
	private int money;
	private int score;
	private int level;
	private int archerDamage;
	private int allySpawnRate;
	private int allyDamage;
	private int allyHealth;
	private boolean doubleShot;
	private boolean pierceShot;
	
	public Globals()
	{
		money = 0;
		score = 0;
		level = 1;
		archerDamage = 50;
		allyDamage = 25;
		allySpawnRate = 500;
		allyHealth = 100;
		doubleShot = false;
		pierceShot = false;
	}
	public int getMoney()
	{
		return money;
	}
	public int setMoney(int value)
	{
		money = value;
	}
	public boolean addMoney(int value)
	{
			money += value;
			return true;
	}
	public boolean subMoney(int value)
	{
		if(money-value < 0 )
			return false;
		money -= value;
		return true;
	}
	public int getScore

}
